    "@vercel/ncc": "^0.38.3",
    "dotenv": "^16.4.7",
    "eslint": "^9.20.1",
    "eslint-plugin-github": "^5.1.8",
    "eslint-plugin-jest": "^28.11.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.0",
    "ts-jest": "^29.2.5",
